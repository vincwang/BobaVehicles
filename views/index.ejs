<!DOCTYPE html>
<html>
<head>
  <title>Boba Vehicles</title>
  <link rel='stylesheet' href='/stylesheets/style.css' />
  <link href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css' rel='stylesheet' type='text/css'>
</head>
<body>
 <% include header.ejs%>

 <div class="row vehicle-list">
  <% for (var i = 0; i < items.length; i ++) {  %>
  <div class="col-sm-6 col-md-4">
    <div class="thumbnail">
      <img src="./images/default-car.jpg" alt="./images/default-car.jpg" >
      <div class="caption">
        <h3><%= items[i].brand%> <%= items[i].model%> $<%= items[i].price%> </h3>
        <% if (items[i].biddable == 1) {
            if (items[i].minimumprice > items[i].currentbid) { %>
              <h3 class="bid-price">Minimum Bid Price: $<%= items[i].minimumprice%></h3>
        <%  } else {  %>
              <h3 class="bid-price">Current Bid: $<%= items[i].currentbid%></h3>
        <% }
      } else { %>
        <h3 class="bid-price">Not biddable</h3>
      <%}%>
        <p><a href= "./checkout?itemid=<%= items[i].itemid%>" class="btn btn-primary" role="button">View</a></p>
      </div>
    </div>
  </div>
  <%}%>
</div>

</body>
<script src="http://ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js"></script>
</html>
